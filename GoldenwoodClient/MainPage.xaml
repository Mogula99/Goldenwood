<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
x:Class="GoldenwoodClient.MainPage"
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:models="clr-namespace:GoldenwoodClient.Models"
xmlns:viewmodels="clr-namespace:GoldenwoodClient.ViewModels"
x:DataType="viewmodels:MainVm"
xmlns:shared="clr-namespace:GoldenwoodClient">

    <ContentPage.Resources>
        <Color x:Key="PageTextColor">Black</Color>
        <x:String x:Key="VillageString">Village</x:String>
    </ContentPage.Resources>
    <VerticalStackLayout Spacing="100">
        <HorizontalStackLayout Spacing="50"
                               HorizontalOptions="Center" 
                               VerticalOptions="Start"
                               BackgroundColor="Black">
            <Button Text="Surroundings" Style="{StaticResource currentPageButton}"></Button>
            <Button Text="{StaticResource Key=VillageString}"
                    TextColor="{StaticResource PageTextColor}"
                    Command="{Binding GoToVillageCommand}"></Button>
            <Button Text="Map"
                    Command="{Binding GoToMapCommand}">
            </Button>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout VerticalOptions="Center" BackgroundColor="Green">
            <Label HorizontalOptions="Start" HeightRequest="500" WidthRequest="500" Text="Village Picture" BackgroundColor="Blue"></Label>
            
            <VerticalStackLayout WidthRequest="100" HeightRequest="400" HorizontalOptions="End">
                <HorizontalStackLayout BackgroundColor="Red" Spacing="5">
                    <Label Text="{Binding PlayerResources.GoldAmount}"></Label>
                    <Label Text="42"></Label>
                    <Label Text="Pikemen"></Label>
                    <Label Text="{Binding PlayerUnitGroups[0].UnitCount}"></Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
